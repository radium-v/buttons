{
    "name": "@radium-v/buttons",
    "version": "0.0.0",
    "description": "A distributed counting app that tracks the number of times you press buttons",
    "author": {
        "name": "John Kreitlow",
        "email": "john@kreitlow.rocks"
    },
    "devDependencies": {
        "@types/node": "^20.4.1",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "@typescript-eslint/parser": "^5.61.0",
        "eslint": "^8.44.0",
        "express": "^4.18.2",
        "prettier": "3.0.0",
        "eslint-plugin-import": "^2.27.5",
        "prettier-eslint": "^15.0.1",
        "sqlite3": "^5.1.6",
        "typescript": "^5.1.6"
    },
    "prettier": {
        "printWidth": 90,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "parser": "typescript",
        "arrowParens": "avoid",
        "htmlWhitespaceSensitivity": "ignore",
        "endOfLine": "auto"
    },
    "scripts": {
        "build:server": "tsc -p server",
        "start:server": "node server/dist/app.js",
        "watch:server": "tsc -p server -w"
    }
}
